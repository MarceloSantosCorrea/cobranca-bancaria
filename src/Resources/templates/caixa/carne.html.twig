<!doctype html>
<html>
<head>
    <style type="text/css">

        /* Elemento */

        body {
            padding: 0;
            max-width: 700px;
        }

        table {
            border-collapse: collapse;
            height: 12px;

        }

        /* IDs */

        #boleto {
            margin: 0; font-style : normal;
            font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
            width: 100%;
            border: none;
            font-size: 8px;
        }

        #tb-esquerda {
            width: 100%;
            float: left;
            margin-left: 5px;
        }

        #tb-topo {
            margin-left: 20px;
            float: left;
        }

        #tb-centro {
            float: left;
            margin-left: 9px;
        }

        #tb-centro tr td {
            height: 12px;
        }

        #tb-esquerda tr td {
            border-right: none;
            height: 12px;
        }

        #tb-topo tr td {
            border-top: none;
            border-bottom: none;
        }

        #linha-digitavel {
            font-size: 3.5mm;
            text-align: center;
            font-weight: 600;
            padding-left: 15px;
        }

        #codigo-banco {
            font-size: 5mm;
            font-weight: bold;
            text-align: center;
            padding: 2px;
        }

        #codigo-barras {
            padding-left: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            display: table;
        }

        #sacado {
            border-right: none;
            border-left: none;
            border-top: none;
            text-align: center;
        }

        /* Classes */

        .sacado-avalista-inferior {
            width: 150px;
            padding-left: 5px;
            padding-top: 2px;
            vertical-align: top;
        }

        .texto-sacado-avalista-inferior {
            font-weight: bold;
        }

        .avalista-inferior {
            padding-top: 5px;
            padding-bottom: 15px;
        }

        .instrucoes {
            font-weight: bold;
            width: 200px;
            vertical-align: top;
        }

        .titulo {
            padding: 0 0 2px 5px;
        }

        .valor {
            padding: 0 0 0 5px;
            font-weight: bold;
        }

        .alinhado-direita {
            text-align: right;
            padding-right: 20px;
        }

        .alinhado-centro {
            text-align: center;
        }

        .logo-banco {
            width: 100px;
        }

        .com-borda-topo {
            border-top: 1px solid #000;
        }

        .com-borda-direita {
            border-right: 1px solid #000;
        }

        .com-borda-baixo {
            border-bottom: 1px solid #000;
        }

        .com-borda-esquerda {
            border-left: 1px solid #000;
        }

        .uppercase {
            text-transform: uppercase;
        }

        .padding-negativo-nome-sacado {
            padding-left: -30px;
        }

    </style>
</head>
<body>
<table id="boleto">
    <tr>
        <td rowspan="2">
            <table id="tb-esquerda">
                <tbody>
                <tr>
                    <td class="alinhado-centro">
                        <img class="logo-banco" src="data:image/jpeg;base64,{{ logoBanco }}"/>
                    </td>
                </tr>
                <tr>
                    <td class="alinhado-centro" id="sacado">RECIBO DO SACADO</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">N&ordm; Documento</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">{{ boleto.numeroDocumento }}</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">Vencimento</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">{{ boleto.dataVencimento | date('d/m/Y') }}</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">Ag./Cod. Benefici&aacute;rio</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">{{ boleto.cedente.agencia }}/{{ boleto.cedente.conta }}
                        -{{ boleto.cedente.dvConta }}</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">Nosso NÃºmero</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">{{ boleto.getCarteiraENossoNumeroComDigitoVerificador }}</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(=) Valor Documento</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda alinhado-direita">{{ boleto.valorBoleto }}</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(-) Desconto</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(-) Outras Deduc/Abat.</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(+) Mora/Multa/Juros</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(+) Outros Acres.</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(=) Valor Cobrado</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">Sacado</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda com-borda-baixo">{{ boleto.sacado.nome }}</td>
                </tr>
                </tbody>
            </table>
        </td>
        <td>
            <table id="tb-topo">
                <tbody>
                <tr>
                    <td>
                        <img class="logo-banco" src="data:image/jpeg;base64,{{ logoBanco }}"/>
                    </td>
                    <td id="codigo-banco"
                        class="com-borda-esquerda com-borda-direita">{{ boleto.banco.geraCodigoBanco() }}</td>
                    <td id="linha-digitavel">{{ boleto.gerarLinhaDigitavel() }}</td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    <tr>
        <td valign="top">
            <table id="tb-centro">
                <tbody>
                <tr>
                    <td class="titulo com-borda-topo" colspan="12">Local do Pagamento</td>
                    <td style="width: 140px;" class="titulo com-borda-topo com-borda-esquerda">Vencimento</td>
                </tr>
                <tr>
                    <td class="valor com-borda-baixo" colspan="12">{{ boleto.banco.localPagamento }}</td>
                    <td class="valor com-borda-baixo alinhado-direita com-borda-esquerda">{{ boleto.dataVencimento | date('d/m/Y') }}</td>
                </tr>
                <tr>
                    <td class="titulo">Benefici&aacute;rio:</td>
                    <td class="valor uppercase" colspan="10">{{ boleto.cedente.nome }}</td>
                    <td class="valor" style="text-align: right; padding-right: 5px;">{{ boleto.cedente.cpfCnpj }}</td>
                    <td class="titulo com-borda-topo com-borda-esquerda">Ag./Cod. Benefici&aacute;rio</td>
                </tr>
                <tr>
                    <td class="valor uppercase com-borda-baixo " colspan="12"> {{ boleto.cedente.endereco }}</td>
                    <td class="valor com-borda-esquerda" style="text-align: center">{{ boleto.cedente.agencia }}/{{ boleto.cedente.conta }}-{{ boleto.cedente.dvConta }}</td>
                </tr>
                <tr>
                    <td class="titulo data-emissao" colspan="3">Data Emiss&atilde;o</td>
                    <td class="titulo numero-documento com-borda-esquerda" colspan="3">N&ordm; Documento</td>
                    <td class="titulo especie-documento com-borda-esquerda" colspan="2">Esp&eacute;cie Doc.</td>
                    <td class="titulo aceite com-borda-esquerda" colspan="2">Aceite</td>
                    <td class="titulo data-processamento com-borda-esquerda" colspan="2">Data Processamento</td>
                    <td class="titulo com-borda-esquerda com-borda-topo">Nosso N&uacute;mero</td>
                </tr>
                <tr>
                    <td class="valor data-emissao" colspan="3"> {{ boleto.dataDocumento | date('d/m/Y') }}</td>
                    <td class="valor numero-documento com-borda-esquerda" colspan="3">{{ boleto.numeroDocumento }}</td>
                    <td class="valor especie-documento com-borda-esquerda"
                        colspan="2">{{ boleto.banco.especieDocumento }}</td>
                    <td class="valor aceite com-borda-esquerda" colspan="2">{{ boleto.banco.aceite }}</td>
                    <td class="valor data-processamento com-borda-esquerda"
                        colspan="2">{{ boleto.dataProcessamento | date('d/m/Y') }}</td>
                    <td class="valor com-borda-esquerda alinhado-direita">{{ boleto.getCarteiraENossoNumeroComDigitoVerificador }}</td>
                </tr>
                <tr>
                    <td class="titulo uso-do-banco com-borda-topo" colspan="3">Uso do Banco</td>
                    <td class="titulo carteira com-borda-esquerda com-borda-topo" colspan="3">Carteira</td>
                    <td class="titulo especie-moeda com-borda-esquerda com-borda-topo" colspan="2">Esp&eacute;cie
                        Moeda
                    </td>
                    <td class="titulo quantidade-moeda com-borda-esquerda com-borda-topo" colspan="2">Qtde moeda</td>
                    <td class="titulo valor-moeda com-borda-esquerda com-borda-topo" colspan="2">xValor</td>
                    <td class="titulo com-borda-esquerda com-borda-topo">(=) Valor Doc.</td>
                </tr>
                <tr>
                    <td class="valor uso-do-banco" colspan="3">&nbsp;</td>
                    <td class="valor carteira com-borda-esquerda" colspan="3">{{ boleto.banco.carteiraFormatada }}</td>
                    <td class="valor especie-moeda com-borda-esquerda" colspan="2">R$</td>
                    <td class="valor quantidade-moeda com-borda-esquerda" colspan="2">&nbsp;</td>
                    <td class="valor valor-moeda com-borda-esquerda" colspan="2">&nbsp;</td>
                    <td class="valor alinhado-direita com-borda-esquerda">{{ boleto.valorBoleto }}</td>
                </tr>
                <tr>
                    <td colspan="12" class="titulo com-borda-topo">Texto de responsabilidade do Benefici&aacute;rio</td>
                    <td class="titulo com-borda-esquerda com-borda-topo">(-) Desconto</td>
                </tr>
                <tr>
                    <td class="instrucoes" colspan="12" rowspan="7">
                        {% for instrucao in boleto.instrucoes %}
                            <p>{{ instrucao }}&nbsp;</p>
                        {% endfor %}
                    </td>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(-) Outras Deduc/Atabt.</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(+) Mora/Multa/Juros</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td class="titulo com-borda-esquerda com-borda-topo">(+) Outros Acres.</td>
                </tr>
                <tr>
                    <td class="valor com-borda-esquerda">&nbsp;</td>
                </tr>
                <tr>
                    <td rowspan="2" colspan="1" class="sacado-avalista-inferior com-borda-topo">Sacado:</td>
                    <td colspan="11" class="texto-sacado-avalista-inferior com-borda-topo uppercase padding-negativo-nome-sacado">{{ boleto.sacado.nome }} - {{ boleto.sacado.cpfCnpj }}</td>
                    <td class="titulo com-borda-esquerda com-borda-topo">(=) Valor. Cobrado</td>
                </tr>
                <tr>
                    <td colspan="11" class="texto-sacado-avalista-inferior uppercase padding-negativo-nome-sacado">{{ boleto.sacado.tipoLogradouro }} {{ boleto.sacado.enderecoLogradouro }}, {{ boleto.sacado.numeroLogradouro }} - {{ boleto.sacado.bairro }} - {{ boleto.sacado.cidade }}/{{ boleto.sacado.uf }} - {{ boleto.sacado.cep }}</td>
                    <td class="com-borda-esquerda com-borda-baixo">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="1" class="sacado-avalista-inferior avalista-inferior">Avalista:</td>
                    <td colspan="11" class="texto-sacado-avalista-inferior avalista-inferior uppercase padding-negativo-nome-sacado">{{ boleto.avalista.nome }} - {{ boleto.avalista.cpfCnpj }}</td>
                </tr>
                <tr>
                    <td rowspan="2" colspan="11" id="codigo-barras" class="com-borda-topo">
                        <img src="data:image/svg;base64,{{ codigoBarras }}"/>
                    </td>
                    <td class="com-borda-topo" colspan="2" style="padding-left: 20px; vertical-align: bottom;">AutenticaÃ§Ã£o Mecanica</td>
                </tr>
                <tr>
                    <td colspan="2" style="padding-left: 20px; vertical-align: top;">Ficha de CompensaÃ§Ã£o</td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
<div style="margin-top: 10px; border-top: 1px dashed #000"></div>
</body>
</html>